source "https://rubygems.org"

# Match installed Ruby version
ruby "3.2.9"

# Rails API
gem "rails", "~> 7.1.0"
gem "sqlite3", "~> 1.4"  # Use SQLite for development (easier setup)
gem "pg", "~> 1.4"       # Keep for production
gem "puma", "~> 6.1"

# bootsnap: use latest available (1.19.x) instead of non-existent >= 1.21.0
gem "bootsnap", "~> 1.19", require: false

# Windows-specific timezone data
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]

# JSON serialization
gem "jsonapi-serializer"

# Environment variables
gem "dotenv-rails", groups: [:development, :test]

# Testing
group :development, :test do
  gem "rspec-rails", "~> 6.1"
end

# HTTP requests
gem "httparty"
